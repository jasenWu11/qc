<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:background="@drawable/register_shape"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/register"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="#ff222222"
                android:paddingRight="8dp"
                android:paddingLeft="6dp"
                android:text="注册"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/verLines"
                android:layout_toLeftOf="@id/register"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#ff222222"
                android:layout_width="2dp"
                style="@style/VerticalLines"/>

            <EditText
                android:id="@+id/phone"
                android:layout_toLeftOf="@id/verLines"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@null"
                android:singleLine="true"
                android:hint="账号"
                android:textSize="13sp"
                android:textColor="@color/eight_and_nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="14dp"
            android:background="@drawable/register_shape"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/forget"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="#ff222222"
                android:paddingRight="8dp"
                android:paddingLeft="6dp"
                android:text="忘记密码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/verLines1"
                android:layout_toLeftOf="@id/forget"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#ff222222"
                android:layout_width="2dp"
                style="@style/VerticalLines"/>

            <EditText
                android:id="@+id/pw"
                android:layout_toLeftOf="@id/verLines1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@null"
                android:singleLine="true"
                android:hint="密码"
                android:textSize="13sp"
                android:textColor="@color/eight_and_nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/enter"
            android:clickable="true"
            android:layout_marginTop="14dp"
            android:text="进如启程"
            android:textSize="13sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:background="@drawable/register_blue_shape"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="11dp"
            android:textColor="@color/three_repeat"
            android:layout_marginTop="9dp"
            android:text="@string/register_agree" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/other"
                android:layout_centerInParent="true"
                android:text="其他方式登录"
                android:textSize="11sp"
                android:textColor="@color/eight_and_nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_toLeftOf="@id/other"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:background="@color/eight_and_nine"
                style="@style/HorizontalLines"
                />

            <View
                android:layout_toRightOf="@id/other"
                android:layout_marginLeft="5dp"
                style="@style/HorizontalLines"
                android:layout_centerVertical="true"
                android:background="@color/eight_and_nine"
                />

        </RelativeLayout>

        <RelativeLayout
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wx"
                android:clickable="true"
                android:drawableTop="@mipmap/home2"
                android:text="微信"
                android:textSize="11sp"
                android:textColor="@color/six_repeat"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/xl"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:text="新浪"
                android:textSize="11sp"
                android:gravity="center_horizontal"
                android:textColor="@color/six_repeat"
                android:drawableTop="@mipmap/home2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/qq"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:text="QQ"
                android:textSize="11sp"
                android:gravity="center_horizontal"
                android:textColor="@color/six_repeat"
                android:drawableTop="@mipmap/home2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>