<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/register_shape"
            android:layout_width="match_parent"
            android:layout_height="31dp">

            <TextView
                android:id="@+id/send"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="#ff222222"
                android:paddingRight="8dp"
                android:paddingLeft="6dp"
                android:text="发送验证码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/verLines"
                android:layout_toLeftOf="@id/send"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#ff222222"
                android:layout_width="2dp"
                style="@style/VerticalLines"/>

            <EditText
                android:id="@+id/phone"
                android:layout_toLeftOf="@id/verLines"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@null"
                android:singleLine="true"
                android:hint="手机号"
                android:inputType="number"
                android:textSize="13sp"
                android:textColor="@color/eight_and_nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="14dp"
            android:background="@drawable/register_shape"
            android:layout_width="match_parent"
            android:layout_height="31dp">

            <EditText
                android:id="@+id/code"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@null"
                android:singleLine="true"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textSize="13sp"
                android:textColor="@color/eight_and_nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="14dp"
            android:background="@drawable/register_shape"
            android:layout_width="match_parent"
            android:layout_height="31dp">

            <EditText
                android:id="@+id/pw"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@null"
                android:singleLine="true"
                android:hint="请输入密码"
                android:textSize="13sp"
                android:textColor="@color/eight_and_nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/complete"
            android:clickable="true"
            android:layout_marginTop="14dp"
            android:text="完成"
            android:textSize="13sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:background="@drawable/register_blue_shape"
            android:layout_width="match_parent"
            android:layout_height="31dp"/>

    </LinearLayout>

</RelativeLayout>