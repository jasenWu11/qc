<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/appcolor">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="技术专场"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@mipmap/daohang" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F6F6F6"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/company_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/companycount"
                                android:layout_marginBottom="1.5dp"
                                android:background="@mipmap/qiye" />

                            <TextView
                                android:id="@+id/companycount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp"
                                android:layout_toRightOf="@+id/company_img"
                                android:text="企业：100"
                                android:textColor="#656565"
                                android:textSize="13sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="#F6F6F6"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/job_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/jobcount"
                                android:background="@mipmap/zhiwei" />

                            <TextView
                                android:id="@+id/jobcount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp"
                                android:layout_toRightOf="@+id/job_img"
                                android:text="职位：100"
                                android:textColor="#656565"
                                android:textSize="13sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F6F6F6"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/people_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/peoplecount"
                                android:background="@mipmap/renshu" />

                            <TextView
                                android:id="@+id/peoplecount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp"
                                android:layout_toRightOf="@+id/people_img"
                                android:text="竞聘人数：100"
                                android:textColor="#656565"
                                android:textSize="13sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F6F6F6"
                    android:gravity="center"
                    android:text="入驻企业"
                    android:textColor="#656565"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/job"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="#F6F6F6"
                    android:gravity="center"
                    android:text="应聘职位"
                    android:textColor="#656565"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/people"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F6F6F6"
                    android:gravity="center"
                    android:text="竞聘者"
                    android:textColor="#656565"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/searchview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_gray_ring"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="1dp"
                        android:paddingTop="3dp">

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="地区"
                            android:textColor="@color/appcolor"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="5dp"
                            android:text="|"
                            android:textColor="#898989" />

                        <EditText
                            android:id="@+id/jobname"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:background="@null"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="请选择地区"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:textColor="#898989"
                            android:textColorHint="#898989"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#898989" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:text="薪资待遇"
                            android:textColor="@color/appcolor"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/money"
                            android:layout_width="110dp"
                            android:layout_height="30dp"
                            android:background="@null"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="请选择薪资区间"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:textColor="#898989"
                            android:textColorHint="#898989"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/search"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_blue_ring"
                    android:gravity="center"
                    android:text="搜索"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/searchview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_gray_ring"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="1dp"
                        android:paddingTop="3dp">

                        <TextView
                            android:id="@+id/location2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="地区"
                            android:textColor="@color/appcolor"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="5dp"
                            android:text="|"
                            android:textColor="#898989" />

                        <EditText
                            android:id="@+id/jobname2"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:background="@null"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="请选择地区"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:textColor="#898989"
                            android:textColorHint="#898989"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#898989" />

                        <TextView
                            android:id="@+id/price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:text="职位"
                            android:textColor="@color/appcolor"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/money2"
                            android:layout_width="110dp"
                            android:layout_height="30dp"
                            android:background="@null"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="请选择职位"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:textColor="#898989"
                            android:textColorHint="#898989"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/search2"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_blue_ring"
                    android:gravity="center"
                    android:text="搜索"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <cn.com.qc.utils.CustomListView
                android:id="@+id/swipe_target"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>