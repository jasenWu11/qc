<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F6F6">

    <TextView
        android:id="@+id/job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/title"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="职位名称：安卓"
        android:textColor="#333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/job"
        android:layout_below="@+id/job"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="公司名称：学锋志愿"
        android:textColor="#333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/company"
        android:layout_below="@+id/company"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="日期：2017-10-10"
        android:textColor="#898989"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/date"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/date"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="地点：北京市"
        android:textColor="#898989"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/company"
        android:layout_toRightOf="@+id/company"
        android:background="@drawable/btn_red_circle"
        android:paddingBottom="2dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="2dp"
        android:text="日结"
        android:textColor="#FB4343"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/job"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="已申请"
        android:textColor="#333"
        android:textSize="14sp" />
</RelativeLayout>