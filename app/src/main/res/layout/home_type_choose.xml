<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/HomeChooseLinearLayout"
        >

        <TextView
            android:text="企业类型"
            android:gravity="center"
            android:drawableRight="@mipmap/xiax"
            android:textSize="13sp"
            android:textColor="@color/three_repeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/businessType"
            style="@style/HomeChooseEditText"
            android:text="@string/home_choose_business_type"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/HomeChooseLinearLayout"
        >

        <TextView
            android:text="行业类型"
            android:textSize="13sp"
            android:gravity="center"
            android:drawableRight="@mipmap/xiax"
            android:textColor="@color/three_repeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tradeType"
            style="@style/HomeChooseEditText"
            android:text="@string/home_choose_trade_type"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/HomeChooseLinearLayout"
        >

        <TextView
            android:text="工作类型"
            android:textSize="13sp"
            android:gravity="center"
            android:drawableRight="@mipmap/xiax"
            android:textColor="@color/three_repeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/workType"
            style="@style/HomeChooseEditText"
            android:text="@string/home_choose_work_type"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/HomeChooseLinearLayout"
        >

        <TextView
            android:text="任职时间"
            android:textSize="13sp"
            android:textColor="@color/three_repeat"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:src="@mipmap/xiax"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/dateContainer"
            android:clickable="true"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/first_choose_date_shape"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date"
                android:textSize="12sp"
                android:textColor="@color/eight_and_nine"
                android:hint="@string/home_choose_date_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="right"
                android:src="@mipmap/riqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/sousuo"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/sousuo"
        android:layout_width="100dp"
        android:layout_height="30dp" />

</LinearLayout>