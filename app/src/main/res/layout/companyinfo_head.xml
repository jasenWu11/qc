<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0E0E0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/appcolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F6F6F6"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/company_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/companycount"
                android:layout_marginBottom="1.5dp"
                android:background="@mipmap/qiye" />

            <TextView
                android:id="@+id/companycount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/company_img"
                android:text="企业：100"
                android:textColor="#656565"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#F6F6F6"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/job_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/jobcount"
                android:background="@mipmap/zhiwei" />

            <TextView
                android:id="@+id/jobcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/job_img"
                android:text="职位：100"
                android:textColor="#656565"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F6F6F6"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/people_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/peoplecount"
                android:background="@mipmap/renshu" />

            <TextView
                android:id="@+id/peoplecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/people_img"
                android:text="竞聘人数：100"
                android:textColor="#656565"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/company"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F6F6F6"
            android:gravity="center"
            android:text="入驻企业"
            android:textColor="#656565"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/job"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#F6F6F6"
            android:gravity="center"
            android:text="应聘职位"
            android:textColor="#656565"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/people"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F6F6F6"
            android:gravity="center"
            android:text="竞聘者"
            android:textColor="#656565"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>