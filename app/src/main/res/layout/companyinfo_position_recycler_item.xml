<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:src="@mipmap/home2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/three_repeat"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon"
            android:id="@+id/position"
            android:text="户外活动推广人员"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/salary"
            android:text="150元/日"
            android:textSize="12sp"
            android:textColor="@color/three_repeat"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:textSize="12sp"
            android:textColor="@color/eight_and_nine"
            android:text="日期：2017-11-18/2017-12-22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/needNum"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="@color/eight_and_nine"
            android:text="人数需求：20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/location"
            android:layout_toRightOf="@id/date"
            android:layout_toLeftOf="@id/needNum"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/eight_and_nine"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="地点：北京市大兴区"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
